<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iten_img"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:adjustViewBounds="true"
            android:drawingCacheQuality="auto"
            android:scaleType="centerCrop"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            app:srcCompat="@mipmap/icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:alpha="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iten_icon"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:background="@color/cardview_light_background"
                    app:srcCompat="@drawable/event_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.8"
                    android:background="@drawable/iten_title_background"
                    android:orientation="horizontal"></LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/iten_name"
                    android:alpha="0.8"
                    android:background="@drawable/iten_gradient"
                    android:orientation="horizontal"></LinearLayout>

                <TextView
                    android:id="@+id/iten_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentRight="true"
                    android:background="@color/discoverytripforeground"
                    android:gravity="right"
                    android:text="Teste"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="24sp" />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>