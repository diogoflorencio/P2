<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.diogo.discoverytrip.Fragments.LeitorCodigoBarras">

    <com.example.diogo.discoverytrip.Util.Camera_Views.CameraSourcePreview
        android:id="@+id/leitor_codigo_barras_cameraContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.diogo.discoverytrip.Util.Camera_Views.GraphicOverlay
            android:id="@+id/leitor_codigo_barras_cameraView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.example.diogo.discoverytrip.Util.Camera_Views.CameraSourcePreview>

    <View
        android:id="@+id/view"

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/cardview_light_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp"

            android:background="@color/cameraForeground"
            android:orientation="horizontal"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"

            android:background="@color/cameraForeground"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
